blueprint:
  name: Lumières robot aspirateur (absence + DND + luminosité)
  description: >
    Allume ou éteint les lumières selon la pièce détectée par le robot.
    Options : présence, DND, luminosité, luminosité fixe ou précédente.
  domain: automation

  input:
    robot_entity:
      name: Robot aspirateur
      description: Ex : vacuum.l40s_pro_ultra
      selector:
        entity:
          domain: vacuum

    current_room_sensor:
      name: Capteur pièce actuelle
      description: Ex : sensor.l40s_pro_ultra_current_room
      selector:
        entity:
          domain: sensor

    room_light_mapping:
      name: Mapping pièces vers lumières
      description: Ajouter autant de pièces que nécessaire, format clé=pièce, valeur=lumière
      selector:
        object:
          multiple: true
          key:
            selector:
              text: {}
          value:
            selector:
              entity:
                domain: light

    enable_presence_check:
      name: Activer gestion de présence
      default: false
      selector:
        boolean: {}

    presence_entities:
      name: Entités de présence
      default: []
      selector:
        entity:
          multiple: true
          domain: person

    presence_state:
      name: État = présent
      default: home
      selector:
        text: {}

    enable_dnd:
      name: Activer DND
      default: false
      selector:
        boolean: {}

    dnd_start_time:
      name: Début DND
      default: "22:30"
      selector:
        time: {}

    dnd_end_time:
      name: Fin DND
      default: "08:00"
      selector:
        time: {}

    enable_luminosity_check:
      name: Activer contrôle luminosité
      default: false
      selector:
        boolean: {}

    luminosity_sensor:
      name: Capteur de luminosité
      default: ""
      selector:
        entity:
          domain: sensor
          device_class: illuminance

    luminosity_threshold:
      name: Seuil lux
      default: 50
      selector:
        number:
          min: 0
          max: 2000
          step: 5

    brightness_mode:
      name: Mode luminosité
      default: fixed
      selector:
        select:
          options:
            - label: Conserver précédente
              value: previous
            - label: Fixer un pourcentage
              value: fixed

    brightness_value:
      name: Pourcentage fixe
      default: 100
      selector:
        number:
          min: 1
          max: 100
          step: 1

mode: single

trigger:
  - platform: state
    entity_id: !input robot_entity
  - platform: state
    entity_id: !input current_room_sensor

variables:
  robot: !input robot_entity
  room_sensor: !input current_room_sensor
  mapping: !input room_light_mapping
  enable_presence: !input enable_presence_check
  enable_lux: !input enable_luminosity_check
  brightness_mode: !input brightness_mode
  brightness_value: !input brightness_value
  presence_state: !input presence_state
  luminosity_threshold: !input luminosity_threshold
  current_room: "{{ states(room_sensor) }}"
  previous_room: "{{ trigger.from_state.state if trigger.entity_id == room_sensor else none }}"
  previous_light: "{{ mapping.get(previous_room) }}"
  robot_state: "{{ states(robot) }}"

  is_running: "{{ robot_state in ['cleaning','returning','sweeping'] }}"
  is_paused_or_docked: "{{ robot_state in ['paused','docked'] }}"
  is_everyone_absent: >
    {% if not enable_presence %}
      {{ true }}
    {% else %}
      {% set absent = true %}
      {% for p in presence_entities %}
        {% if states(p) == presence_state %}
          {% set absent = false %}
        {% endif %}
      {% endfor %}
      {{ absent }}
    {% endif %}
  is_too_bright: >
    {% if not enable_lux or not luminosity_sensor %}
      {{ false }}
    {% else %}
      {{ states(luminosity_sensor) | float(default=0) > luminosity_threshold }}
    {% endif %}
  is_dnd_active: >
    {% if not enable_dnd %}
      {{ false }}
    {% else %}
      {% set now_m = now().hour*60 + now().minute %}
      {% set s = str(dnd_start_time).split(':') %}
      {% set e = str(dnd_end_time).split(':') %}
      {% set start_m = s[0]|int*60 + s[1]|int %}
      {% set end_m = e[0]|int*60 + e[1]|int %}
      {% if end_m > start_m %}
        {{ start_m <= now_m < end_m }}
      {% else %}
        {{ now_m >= start_m or now_m < end_m }}
      {% endif %}
    {% endif %}

action:
  - choose:
      - conditions:
          - "{{ current_room in mapping }}"
          - "{{ is_running }}"
          - "{{ is_everyone_absent }}"
          - "{{ not is_dnd_active }}"
          - "{{ not is_too_bright }}"
        sequence:
          - choose:
              - conditions: "{{ brightness_mode == 'fixed' }}"
                sequence:
                  - service: light.turn_on
                    target:
                      entity_id: "{{ mapping.get(current_room) }}"
                    data:
                      brightness_pct: "{{ brightness_value }}"
            default:
              - service: light.turn_on
                target:
                  entity_id: "{{ mapping.get(current_room) }}"

  - choose:
      - conditions:
          - "{{ previous_light is not none }}"
          - "{{ previous_room != current_room }}"
          - "{{ is_running }}"
          - "{{ is_everyone_absent }}"
          - "{{ not is_dnd_active }}"
        sequence:
          - service: light.turn_off
            target:
              entity_id: "{{ previous_light }}"

  - choose:
      - conditions:
          - "{{ current_room in mapping }}"
          - "{{ is_paused_or_docked }}"
          - "{{ is_everyone_absent }}"
          - "{{ not is_dnd_active }}"
        sequence:
          - choose:
              - conditions: "{{ robot_state == 'docked' }}"
                sequence:
                  - delay: "00:00:15"
              - conditions: "{{ robot_state == 'paused' }}"
                sequence:
                  - delay: "00:01:00"
          - service: light.turn_off
            target:
              entity_id: "{{ mapping.get(current_room) }}"
